<div id="<%= dom_id producto %>">
  <div>
    <strong>Titulo:</strong>
    <%= producto.titulo %>
  </div>

  <div>
    <strong>Descripcion:</strong>
    <%= producto.descripcion %>
  </div>

  <div>
    <strong>Autor:</strong>
    <%= producto.autor %>
  </div>

  <div>
    <strong>Precio:</strong>
    <%= producto.precio %>
  </div>

  <div>
    <strong>Stock:</strong>
    <%= producto.stock %>
  </div>

  <div>
    <strong>Categoria:</strong>
    <%= producto.categoria %>
  </div>

  <div>
    <strong>Tipo:</strong>
    <%= producto.tipo %>
  </div>

  <div>
    <strong>Estado:</strong>
    <%= producto.estado %>
  </div>

  <div>
    <strong>Fecha ingreso:</strong>
    <%= producto.fecha_ingreso %>
  </div>

  <div>
    <strong>Fecha modificacion:</strong>
    <%= producto.fecha_modificacion %>
  </div>

  <div>
    <strong>Fecha baja:</strong>
    <%= producto.fecha_baja %>
  </div>

  <div>
    <strong>Tipo:</strong>
    <%= producto.tipo %>
  </div>

  <% if producto.imagenes.attached? %>
    <div>
      <strong>Im√°genes:</strong>
      <div>
        <% producto.imagenes.each do |img| %>
          <%= image_tag url_for(img), style: "max-width: 300px; height: auto; margin-right: 8px;" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if producto.audio_muestra.attached? %>
    <div>
      <strong>Audio de muestra:</strong>
      <%= audio_tag url_for(producto.audio_muestra), controls: true %>
    </div>
  <% end %>
</div>

<div class="card h-100">
  
  <!-- Imagen de portada -->
  <%= link_to storefront_producto_path(producto) do %>
    <% if producto.imagenes.attached? %>
      <%= image_tag producto.imagenes.first, class: "card-img-top", style: "object-fit: cover; height: 200px;" %>
    <% else %>
      <%= image_tag "placeholder.png", class: "card-img-top", style: "object-fit: cover; height: 200px;" %>
    <% end %>
  <% end %>

  <div class="card-body">
    <h5 class="card-title"><%= producto.titulo %></h5>

    <p class="text-muted"><strong>Artista:</strong> <%= producto.autor %></p>

    <p>
      <%= truncate(producto.descripcion, length: 80) %>
    </p>

    <p class="fw-bold text-primary">
      $ <%= number_with_precision(producto.precio, precision: 2) %>
    </p>

    <p class="<%= producto.stock > 0 ? 'text-success' : 'text-danger' %>">
      <strong>Stock:</strong> <%= producto.stock %>
    </p>
  </div>

  <div class="card-footer text-center">
    <%= link_to "Ver mÃ¡s", storefront_producto_path(producto), class: "btn btn-outline-primary w-100" %>
  </div>
</div>

<h1 class="mb-4 text-dark">Editar Usuario</h1>

<% if @usuario.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if current_usuario.id == @usuario.id && @usuario.valid_password?("123456") %>
  <div class="alert alert-warning">
    Debes cambiar la contraseña "123456" antes de continuar. No puedes salir de esta pantalla hasta hacerlo.
  </div>
<% end %>

<div class="form-panel">
  <%= form_with(model: @usuario, local: true, class: "row g-3") do |form| %>
    <div class="col-12">
      <%= form.label :nombre, class: "form-label" %>
      <%= form.text_field :nombre, class: "form-control", required: true, minlength: 2 %>
    </div>

    <div class="col-12">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true, disabled: current_usuario.id == @usuario.id %>
    </div>

    <div class="col-12">
      <%= form.label :dni, class: "form-label" %>
      <%= form.text_field :dni, class: "form-control", required: true, minlength: 7, disabled: current_usuario.id == @usuario.id %>
    </div>

    <%# Solo mostrar el select de rol si NO estoy editando mi propio perfil %>
    <% if current_usuario.id != @usuario.id && policy(@usuario).permitted_attributes.include?(:rol) %>
      <div class="col-12">
        <%= form.label :rol, class: "form-label" %>
        <%= form.select :rol,
              Usuario::ROLES.map { |k,v| [k.to_s.capitalize, v] },
              { include_blank: "Seleccione rol" },
              class: "form-select", required: true %>
      </div>
    <% end %>

    <% if current_usuario.id == @usuario.id %>
      <div class="col-12">
        <%= form.label :password, "Nueva contraseña (obligatorio)", class: "form-label" %>
        <%= form.password_field :password, class: "form-control", autocomplete: "new-password", required: @usuario.valid_password?("123456") %>
        <small class="text-muted">
          <% if @usuario.valid_password?("123456") %>
            Debes ingresar una nueva contraseña.
          <% else %>
            Dejar vacío para mantener la contraseña actual.
          <% end %>
        </small>
      </div>
      <div class="col-12">
        <%= form.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: @usuario.valid_password?("123456") %>
      </div>
    <% end %>

    <div class="col-12 mt-3">
      <%= form.submit "Actualizar Usuario", class: "btn btn-as-dark" %>
    </div>
  <% end %>
</div>

<p class="mt-3">
  <% if !(current_usuario.id == @usuario.id && @usuario.valid_password?("123456")) %>
    <%= link_to usuarios_path, class: "btn btn-as-dark" do %>
      <i class="bi bi-arrow-left"></i> Volver
    <% end %>
  <% else %>
    <button class="btn btn-as-dark" disabled>
      <i class="bi bi-arrow-left"></i> Volver
    </button>
  <% end %>
</p>
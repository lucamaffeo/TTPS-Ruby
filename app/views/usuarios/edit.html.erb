<h1 class="mb-4 text-dark">Editar Usuario</h1>

<div class="form-panel">
  <%= form_with(model: @usuario, local: true, class: "row g-3") do |form| %>
    <div class="col-12">
      <%= form.label :nombre, class: "form-label" %>
      <%= form.text_field :nombre, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= form.label :dni, class: "form-label" %>
      <%= form.text_field :dni, class: "form-control" %>
    </div>

    <% if policy(@usuario).permitted_attributes.include?(:rol) %>
      <div class="col-12">
        <%= form.label :rol, class: "form-label" %>
        <%= form.select :rol,
              Usuario::ROLES.map { |k,v| [k.to_s.capitalize, v] },
              { include_blank: "Seleccione rol" },
              class: "form-select" %>
      </div>
    <% end %>

    <div class="col-12">
      <%= form.label :password, "Cambiar password (opcional)", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="col-12">
      <%= form.label :password_confirmation, "ConfirmaciÃ³n password", class: "form-label" %>
      <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="col-12 mt-3">
      <%= form.submit "Actualizar Usuario", class: "btn btn-as-dark" %>
    </div>
  <% end %>
</div>

<p class="mt-3">
  <%= link_to usuarios_path, class: "btn btn-as-dark" do %>
    <i class="bi bi-arrow-left"></i> Volver
  <% end %>
</p>
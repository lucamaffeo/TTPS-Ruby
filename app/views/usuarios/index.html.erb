<% content_for :title, "Gestión de Usuarios" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-dark fw-bold"><i class="bi bi-people"></i> Gestión de Usuarios</h1>
  <%= link_to new_usuario_path, class: usuario_new_button_classes do %>
    <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
  <% end %>
</div>

<div class="card border-0 shadow-sm">
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="bg-light">
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th>DNI</th>
          <th>Rol</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td class="fw-semibold"><%= usuario.nombre %></td>
            <td class="text-secondary"><%= usuario.email %></td>
            <td class="text-muted"><%= usuario.dni %></td>
            <td>
              <span class="badge bg-secondary">
                <%= Usuario::ROLES.key(usuario.rol)&.to_s&.capitalize || "—" %>
              </span>
            </td>
            <td class="text-end">
              <%= link_to usuario_path(usuario), class: "btn btn-sm btn-outline-dark" do %>
                Ver detalle <i class="bi bi-arrow-right"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        <% if @usuarios.empty? %>
          <tr>
            <td colspan="5" class="text-center py-4 text-muted fst-italic">
              No hay usuarios registrados.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer bg-white border-0 py-3 d-flex justify-content-center">
    <%= paginate @usuarios %>
  </div>
</div>
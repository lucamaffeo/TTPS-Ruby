    <i class="bi bi-pencil-square"></i> Editar
  <% end %>

  <%= link_to usuario_path(@usuario),
              data: { turbo_method: :delete, turbo_confirm: "Â¿Seguro que quieres eliminar este usuario?" },
              class: "btn btn-dark me-2" do %>

<%= render "bases/base_show",
           title: @usuario.nombre,
           fields: {
             "Email" => @usuario.email,
             "Rol" => Usuario::ROLES.key(@usuario.rol)&.to_s&.capitalize
           } %>

<p class="mt-3">
  <%= link_to edit_usuario_path(@usuario), class: usuario_edit_button_classes(@usuario) do %>
    <i class="bi bi-pencil-square"></i> Editar
  <% end %>

  <%= button_to usuario_path(@usuario),
                method: :delete,
                data: { turbo_confirm: "Â¿Seguro que quieres eliminar este usuario?" },
                class: usuario_destroy_button_classes(@usuario) do %>
    <i class="bi bi-trash3"></i> Eliminar
  <% end %>

  <%= link_to usuarios_path, class: "btn btn-as-dark" do %>
    <i class="bi bi-arrow-left"></i> Volver
  <% end %>
</p>
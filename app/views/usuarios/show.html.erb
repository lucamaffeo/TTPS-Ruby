<%= render "bases/base_show",
           title: @usuario.nombre,
           fields: {
             "Email" => @usuario.email,
             "DNI" => @usuario.dni,
             "Rol" => Usuario::ROLES.key(@usuario.rol)&.to_s&.capitalize
           } %>

<div class="d-flex flex-row flex-wrap gap-2 mt-3">
  <%= link_to edit_usuario_path(@usuario), class: "btn btn-as-dark btn-sm" do %>
    <i class="bi bi-pencil-square"></i> Editar
  <% end %>

  <%= button_to usuario_path(@usuario),
                method: :delete,
                class: "btn btn-as-dark btn-sm",
                onclick: "return confirm('多Seguro que quieres eliminar este usuario?');" do %>
    <i class="bi bi-trash3"></i> Eliminar
  <% end %>

  <% if current_usuario&.administrador? && current_usuario.id != @usuario.id %>
    <%= button_to reset_password_default_usuario_path(@usuario),
                  method: :patch,
                  class: "btn btn-as-dark btn-sm",
                  data: { turbo_confirm: "多Restablecer la contrase単a a '123456'?" } do %>
      <i class="bi bi-key"></i> Restablecer contrase単a
    <% end %>
  <% end %>

  <%= link_to usuarios_path, class: "btn btn-as-dark btn-sm" do %>
    <i class="bi bi-arrow-left"></i> Volver
  <% end %>
</div>
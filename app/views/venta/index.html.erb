<% content_for :title, "Venta" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0"><i class="bi bi-receipt"></i> Ventas</h1>

  <div>
    <%= link_to({ controller: 'venta', action: :new }, class: "btn btn-as-dark") do %>
      <i class="bi bi-plus-circle"></i> Nueva venta
    <% end %>
  </div>
</div>
<div class="main-card">
  <div class="table-responsive">
    <table class="table-base table table-sm align-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Vendedor</th>
          <th>Rol</th>
          <th>Hora inicio</th>
          <th>Cliente</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @ventas.each do |venta| %>
          <tr>
            <td><%= venta.id %></td>
            <td><%= venta.empleado.nombre %></td>
            <td><%= venta.empleado&.rol_label%></td>
            <td><%= venta.fecha_hora.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= venta.cliente&.nombre %></td>
            <td><%= number_to_currency(venta.total) %></td>
            <td class="text-end">
                <%= link_to({ controller: 'venta', action: :show, id: venta }, class: "btn btn-as-dark") do %>
                  <i class="bi bi-search"></i> Ver venta
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
